    $(function () {
        $("select").bind("change", function () {
            var kind = '';
            if ($(this).val() == "0"){
                kind = '0'
            }
            else if($(this).val() == "1"){
                kind = '1'
            }

            $.post("/switch_lang",{language:kind},
                    function (data) {
                        if(data === 'success'){
                            window.location.href="/";
                        }
            });
        })
    });
</script>